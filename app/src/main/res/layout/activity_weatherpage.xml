<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.akshay.forecast.FrontActivity">

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="CITY"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/country"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/city"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="284dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="21dp"
            android:text="COUNTRY"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/city"
            android:layout_marginTop="5dp"
            android:text="20-03-2018"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/images" />

        <TextView
            android:id="@+id/maxtmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="203dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="174dp"
            android:text="35"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="282dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="97dp"
            android:text="°C"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/maxtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="274dp"
            android:text="MAX"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mintmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxtmp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="202dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="175dp"
            android:text="21"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxtmp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="283dp"
            android:layout_marginLeft="265dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="97dp"
            android:text="°C"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="" />

        <TextView
            android:id="@+id/mintxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/maxtxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="285dp"
            android:text="MIN"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desctext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mintxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="278dp"
            android:text="Day    -"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/mintxt"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="163dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="155dp"
            android:layout_marginEnd="37dp"
            android:text="Sunny"
            android:textColor="@color/colorRed"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desctext2"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_below="@id/desctext"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="72dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="277dp"
            android:layout_marginBottom="94dp"
            android:text="Night -"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/desc2"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_below="@id/desc"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="161dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="95dp"
            android:text="Cloudy"
            android:textColor="@color/colorRed"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/condition"
            android:layout_width="wrap_content"
            android:layout_height="68dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="69dp"
            android:layout_marginTop="428dp"
            android:layout_marginEnd="54dp"
            android:layout_marginBottom="235dp"
            android:text="Conditions"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/category"
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="68dp"
            android:layout_marginTop="501dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="193dp"
            android:text="Category"
            android:textColor="@color/colorRed"
            android:textSize="22sp" />


    </RelativeLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"/>
</android.support.v4.widget.DrawerLayout>