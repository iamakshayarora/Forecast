<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akshay.forecast.FrontActivity">

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="VELLORE"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/city"
        android:layout_toEndOf="@+id/deg1"
        android:layout_marginTop="5dp"
        android:text="INDIA"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/city"
        android:layout_marginTop="5dp"
        android:text="20-03-2018"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/colorRed"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/pic" />

    <TextView
        android:id="@+id/maxtmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:text="35"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/deg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="265dp"
        android:text="°C"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle=""/>
    <TextView
        android:id="@+id/maxtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="MAX"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/mintmp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxtmp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:text="21"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/deg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxtmp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="265dp"
        android:text="°C"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle=""/>
    <TextView
        android:id="@+id/mintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/maxtxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:text="MIN"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/desctext"
        android:layout_below="@id/mintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day    -"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/desc"
        android:layout_below="@id/mintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sunny"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"
        android:textColor="@color/colorRed"/>
    <TextView
        android:id="@+id/desctext2"
        android:layout_below="@id/desctext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Night -"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:textColor="@color/colorPrimaryDark"/>
    <TextView
        android:id="@+id/desc2"
        android:layout_below="@id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudy"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="190dp"
        android:textColor="@color/colorRed"/>

    <Button
        android:id="@+id/but1"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mintmp"
        android:layout_below="@+id/desc2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/rounded_button"
        android:text="Upcoming"
        android:textColor="@color/colorBlue"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>

